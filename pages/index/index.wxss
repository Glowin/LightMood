/**index.wxss**/

/* 容器样式 */
.container {
  width: 100%;
  height: 100vh;
  position: relative;
  overflow: hidden;
}

/* 颜色画布 */
.color-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

/* 控制面板 */
.control-panel {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(10px);
  padding: 30rpx 20rpx 50rpx;
  border-radius: 30rpx 30rpx 0 0;
  z-index: 10;
  transition: transform 0.3s ease;
}

/* 控制面板显示/隐藏状态 */
.control-panel.visible {
  transform: translateY(0);
}

.control-panel.hidden {
  transform: translateY(100%);
}

/* 预设颜色按钮容器 */
.preset-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  margin-bottom: 20rpx;
}

/* 预设颜色按钮 */
.preset-btn {
  width: 30%;
  padding: 15rpx 0;
  margin-bottom: 20rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 10rpx;
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.preset-btn.active {
  background-color: rgba(255, 255, 255, 0.4);
  border: 1px solid rgba(255, 255, 255, 0.6);
}

/* 滑块区域 */
.slider-section {
  padding: 10rpx 0;
}

/* 面板切换按钮 */
.panel-toggle {
  position: absolute;
  bottom: 0;
  right: 30rpx;
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 20;
  transform: translateY(-50%);
}

/* 切换图标 */
.toggle-icon {
  width: 30rpx;
  height: 30rpx;
  border-left: 3px solid #fff;
  border-bottom: 3px solid #fff;
  transition: transform 0.3s ease;
}

.toggle-icon.up {
  transform: rotate(135deg);
}

.toggle-icon.down {
  transform: rotate(-45deg);
}

/* 滑块样式覆盖 */
slider {
  margin: 10rpx 0 30rpx;
}